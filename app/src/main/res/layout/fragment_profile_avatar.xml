<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/fragmentProfileAvatar"
             tools:context=".fragments.ProfileAvatarFragment">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <ImageView
                android:id="@+id/iv_profile_avatar"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:contentDescription="@string/avatar"/>
        <LinearLayout
                android:id="@+id/ib_upload_avatar_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <ImageButton
                    android:background="@color/white"
                    android:layout_width="50dp"
                    tools:src="@drawable/ic_camera" android:layout_height="50dp" android:contentDescription="camera"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:text="Take photo"
            />
        </LinearLayout>
        <LinearLayout  android:id="@+id/ib_upload_avatar_gallery" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:orientation="horizontal">
            <ImageButton
                    android:layout_width="50dp"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/child_margin_top"
                    android:src="@drawable/ic_gallery" android:layout_height="50dp" android:contentDescription="gallery"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="Upload from gallery"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
            />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>